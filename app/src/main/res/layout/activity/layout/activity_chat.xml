<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chat_main_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_80"
                    android:text="刘悦"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="刘悦"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fl_mine_video"
                android:layout_width="@dimen/dp_100"
                android:layout_height="180dp"
                android:layout_margin="@dimen/dp_10"></FrameLayout>
        </LinearLayout>


        <FrameLayout
            android:id="@+id/fl_your_video"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_weight="1"></FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_70"
                android:layout_weight="1"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/chx_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@drawable/audio_shape"
                    android:text="扬声器"
                    android:textColor="@color/main_bg"
                    android:textSize="@dimen/sp_17" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_70"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@drawable/icon_refused"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_10"
                    android:textColor="@color/main_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_80"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_hangup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@drawable/icon_pack_up"
                    android:text="收起"
                    android:textColor="@color/main_bg"
                    android:textSize="@dimen/dp_17" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"></View>
    </LinearLayout>
</layout>