<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/titlebar"
            layout="@layout/titlebar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_dialog_exit"
                    android:drawableTop="@drawable/tizhicheng"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_15"
                    android:text="体脂称"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_dialog_exit"
                    android:drawableTop="@drawable/xuetangyi"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_15"
                    android:text="血糖仪"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_dialog_exit"
                    android:drawableTop="@drawable/shouhuan"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_15"
                    android:text="手环"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_100"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_dialog_exit"
                    android:drawableTop="@drawable/xueyaji"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_15"
                    android:text="血压计"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"></View>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>
        </LinearLayout>
    </LinearLayout>
</layout>