<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/list_item"
            layout="@layout/item_contact"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_advice"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="医生建议"
                        android:textColor="@color/main_tab_color"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_advice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="      看麻烦圣诞快乐离开对方多少李开复代课老师东三路口发多少两款施蒂利克东三路口两点上课德鲁克说两点上课两点上课施蒂利克顺利打开都快死了单身快乐"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/remind"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="提醒事项"
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/tv_remind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/text_red"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_15"
                        android:drawableLeft="@drawable/icon_health"
                        android:drawablePadding="@dimen/dp_8"
                        android:text="健康课堂"
                        android:textColor="@color/text_green"
                        android:textSize="@dimen/sp_16" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/mViewpager"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"></android.support.v4.view.ViewPager>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>