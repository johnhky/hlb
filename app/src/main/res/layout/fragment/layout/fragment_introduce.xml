<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="ABOUT US"
                android:textColor="@color/main_tab_color"
                android:textSize="@dimen/sp_19"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/gray_33"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="关于我们"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_17" />

                <View
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/gray_33"></View>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:textColor="@color/text_main_color"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="DOCTOR INTRODUCE"
                android:textColor="@color/main_tab_color"
                android:textSize="@dimen/sp_19"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/gray_33"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="医生介绍"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_17" />

                <View
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/gray_33"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_doctor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_33"
                        android:textSize="@dimen/sp_17" />

                    <TextView
                        android:id="@+id/tv_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/text_main_color"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical"></ImageView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center"
                android:text="CLUB ENVIRONMENT"
                android:textColor="@color/main_tab_color"
                android:textSize="@dimen/sp_19"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/gray_33"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="俱乐部环境"
                    android:textColor="@color/gray_33"
                    android:textSize="@dimen/sp_17" />

                <View
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_2"
                    android:background="@color/gray_33"></View>
            </LinearLayout>

            <com.hlb.haolaoban.widget.MyGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:horizontalSpacing="@dimen/dp_5"
                android:numColumns="2"
                android:verticalSpacing="@dimen/dp_5"></com.hlb.haolaoban.widget.MyGridView>
        </LinearLayout>
    </ScrollView>
</layout>