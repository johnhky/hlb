<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:paddingTop="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            >

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_55"
                android:layout_marginStart="@dimen/dp_55"
                android:orientation="horizontal">
          <!--      <ImageView
                    android:layout_width="@dimen/dp_5"
                    android:background="@drawable/shape_red_round"
                    android:layout_height="@dimen/dp_5"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_5"
                    />-->
                <TextView
                    android:id="@+id/message_item_audio_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="3ï¼‚"
                    android:textColor="@color/text_main_color"
                    android:layout_marginRight="@dimen/dp_5"
                    android:textSize="@dimen/sp_13" />
                <FrameLayout
                    android:id="@+id/message_item_audio_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/avatar"
                    android:background="@drawable/right"
                    android:padding="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/message_item_audio_playing_animation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/msg_audio_animation_right" />

                </FrameLayout>
            </LinearLayout>

        </RelativeLayout>

        <com.hlb.haolaoban.widget.RoundImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dp_40"
            android:background="@drawable/head"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true" />
    </LinearLayout>
</layout>